<%- include('../partials/headLogin.ejs') %>
<%- include('../partials/menu.ejs') %>
<div class="container">
    <br\>
    <div 
        class="card position-absolute top-50 start-50 translate-middle"
        style="width: 18rem;">
        <div class="card-header" style="background-color: rgba(86, 165, 79, 0.813); color:rgb(255, 255, 255);">Login</div>
        <div class="card-body" style="background-color: rgba(155, 196, 151, 0.813)">
            <form method="post" action="/funcionarios/login">
                <div class="form-floating mb-3" >
                    <input 
                        type="text"
                        name="numeroPessoal"
                        id="numeroPessoal"
                        class="form-control"
                        placeholder="Digite o numero pessoal" >
                    <label for="nome">Digite o numero pessoal</label>
                </div>
                <div class="form-floating mb-3">
                    <input
                        type="password"
                        name="senha"
                        id="senha"
                        class="form-control"
                        placeholder="Digite sua senha">
                    <label for="email">Digite sua senha</label>
                </div>
                <br>
                <% if(msg != '') { %>
                    <div class="alert alert-danger">
                        <%= msg %>
                    </div>
                <% }%>
            <div class="container text-center">
                <div class="row">
                    <div class="col"> 
                        <button type="submit" class="btn btn-primary">Login</button>    
                    </div>
                
                    <div class="col" > 
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </div> 
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
