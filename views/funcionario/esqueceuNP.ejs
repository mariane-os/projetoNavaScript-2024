<%- include('../partials/headLogin.ejs') %>
<%- include('../partials/menu.ejs') %>
<div class="container">
    <br\>
    <div 
        class="card position-absolute top-50 start-50 translate-middle"
        style="width: 18rem;">
        <div class="card-header" style="background-color: rgba(86, 165, 79, 0.813); color:rgb(255, 255, 255);">Esqueceu seu NP?</div>
        <div class="card-body" style="background-color: rgba(155, 196, 151, 0.813)">
            <form method="post" action="/funcionarios/esqueci">
                <div class="form-floating mb-3" >
                    <input 
                        type="text"
                        name="nome"
                        id="nome"
                        class="form-control"
                        placeholder="Digite seu nome" >
                    <label for="nome">Digite seu nome</label>
                </div>
                <br>
                <% if(np != '' && np != 'Nome não encontrado') { %>
                    <div class="alert alert-info">
                        Seu np é: <%= np %>
                    </div>
                <% }else if(np != '') {%>
                    <div class="alert alert-danger">
                        <%= np%>
                    </div>
                <% } %>
            <div class="container text-center">
                <div class="row">
                    <div class="col"> 
                        <button type="submit" class="btn btn-primary">Buscar</button>    
                    </div>
                
                    <div class="col" > 
                        <a href="/funcionarios/login" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </div> 
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>