                <div class="card-body align-itens-center">
                    <div class="card-title" ><h2>Metal</h2></div>
                    <div class="card-text">
                        <h2>
                        <%if (lixos.length >= 1) { %>
                            <%= lixos[0].peso_total %>
                        <% }else { %>
                            0
                        <% } %> Kg's
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3" align="center">
            <div class="card text-center text-white" style="width: 12rem;background-color: green;">
                <div class="card-body align-itens-center">
                    <div class="card-title" ><h2>Papel</h2></div>
                    <div class="card-text">
                        <h2>

                        <%if (lixos.length >= 2) { %>
                            <%= lixos[1].peso_total %>
                        <% }else { %>
                            0
                        <% } %> Kg's
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3" align="center">
            <div class="card text-center text-white" style="width: 12rem;background-color: green;">
